{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",          // ⬅️ เปลี่ยนจาก nodenext เป็น commonjs
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
